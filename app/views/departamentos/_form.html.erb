<%= form_for(@departamento, :html => {:class => "form-horizontal"}) do |f| %>


  <% if @departamento.errors.any? %>
    <div id="error_explanation" class="alert alert-error ">
      <button type="button" class="close" data-dismiss="alert">Ã—</button>
      <h3>Erro(s) ao tentar gravar</h3>

      <ul>
      <% @departamento.errors.each do |error,message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :nome, "Nome: ", :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :nome %>
    </div>
  </div>

    <div class="form-actions">
      <%= f.submit "Gravar", :class => "btn btn-primary" %>
    </div>
  
<% end %>
