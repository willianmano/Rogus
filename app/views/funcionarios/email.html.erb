<h2>Enviar email</h2>

<% unless notice.nil? %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>

<%= form_tag send_email_url do %>
  <div class="control-group">
  	<%= label_tag(:email, "Email:") %>
  	<div class="controls">
  	  <%= text_field_tag(:email) %>
  	</div>
  </div>

  <div class="form-actions">
  	<%= submit_tag("Enviar") %>
  </div>

<% end %>